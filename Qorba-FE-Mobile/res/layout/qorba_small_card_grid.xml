<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alignmentMode="alignBounds"
    android:background="@android:color/white"
    android:columnCount="4"    
    android:rowCount="6"
    android:useDefaultMargins="false"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/headIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:adjustViewBounds="true"
        android:src="@drawable/cardhead"/>

     <ImageView
        android:id="@+id/joinicon"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"                
        android:adjustViewBounds="true"
        android:src="@drawable/join" 
        android:paddingTop="4dp"/>
     
      <TextView
        android:id="@+id/placename"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="2"     
        android:layout_gravity="fill_horizontal"   
        android:text="Grand Cafe and Restourants @Maady"
        android:textSize="10dp"
        android:textColor="@android:color/white" />
     
    <ImageView
        android:id="@+id/mainavIcon"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:layout_rowSpan="3"
        android:adjustViewBounds="true"
        android:src="@drawable/mainav" />
    

    <TextView
        android:id="@+id/avname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:text="Ahmed Fahmy"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/maindate"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:text="WED"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_column="3"
        android:layout_row="4"        
        android:text="27 JAN"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/maindate4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_column="3"
        android:layout_row="5"
        android:text="12:00 PM"
        android:textSize="10dp"
        android:textStyle="bold" />

</GridLayout>